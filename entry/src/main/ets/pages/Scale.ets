@Entry
@Component
struct Scale{
  build(){
    Column(){
      //根组件
      Text('文字')
        .width(100)
        .height(100)
        .margin(90)
        .backgroundColor(Color.Pink)

        .stateStyles({
          normal:{
            .scale({
              x:1,
              y:1//x和y轴的缩放比例默认1！！！！
            })
          },
          pressed:{
            .scale({x:1.5,y:1})
          }
        })
        .animation({
          duration:1000
        })

      Text('文字')
        .width(100)
        .height(100)
        .margin(90)
        .backgroundColor(Color.Pink)

        .stateStyles({
          normal:{
            .rotate({
              angle:0
            })
          },
          pressed:{
            .rotate({angle:100})
          }
        })
        .animation({
          duration:1000
        })
    }
  }
}